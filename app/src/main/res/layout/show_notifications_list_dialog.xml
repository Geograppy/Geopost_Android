    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/show_notifications_list_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/show_notification_list_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="@string/show_notifications_title"
        android:textColor="@color/counter_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@color/white"/>

        <ListView
            android:id="@+id/show_notifications_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:textSize="11sp"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/card"
            />
    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:text="@string/clear"
        android:textColor="@color/counter_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        />
    </LinearLayout>
